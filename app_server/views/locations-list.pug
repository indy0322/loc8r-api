extends layout
include _includes/sharedHTMLfunctions

block content
  .row.banner
    .col-12
      h1= pageHeader.title
        small &nbsp;#{pageHeader.strapline} 2018265019 김승민

  .row
    .col-12.col-md-8
      .error= message

      app-home-list
      
      //each location in locations
        .card
          .card-block
            h4
              a(href=`/location/${location._id}`)= location.name
              small &nbsp;
              +outputRating(location.rating)
              span.badge.badge-pill.badge-default.float-right= location.distance
            p.address= location.address
            .facilities
              each facility in location.facilities
                span.badge.badge-warning= facility

    .col-12.col-md-4
      p.lead= sidebar

block scripts 
  script(src='/build/main.30a347145ec02b69.js') 
  script(src='/build/polyfills.db8d0556f7a00a3d.js')
  script(src='/build/runtime.fd29255fd8315448.js')